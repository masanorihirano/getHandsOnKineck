<Window x:Class="getHands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:getHands"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Grid Margin="0,0,0,0">
        <Viewbox HorizontalAlignment="left" Margin="0,0,300,0">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <Viewbox HorizontalAlignment="right" Margin="750,0,0,0">
            <TextBlock HorizontalAlignment="right" FontSize="20" TextWrapping="Wrap" Text="{Binding DataText}" VerticalAlignment="Top" Width="300" Height="671"/>
        </Viewbox>
    </Grid>
</Window>
